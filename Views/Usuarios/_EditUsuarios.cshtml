@model Hotel.ViewModels.UsuarioEditViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="usuario-edit-container">
    <h1 class="usuario-edit-title">Editar Usuario</h1>
    <hr />

    <form id="editForm" asp-action="Edit" class="usuario-edit-form">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="NombreUsuario" class="control-label"><i class="fas fa-user"></i> Nombre de Usuario</label>
            <input asp-for="NombreUsuario" class="form-control" required />
            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nombre" class="control-label"><i class="fas fa-id-card"></i> Nombre</label>
            <input asp-for="Nombre" class="form-control" required />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Apellido" class="control-label"><i class="fas fa-id-card"></i> Apellido</label>
            <input asp-for="Apellido" class="form-control" required />
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Telefono" class="control-label"><i class="fas fa-phone"></i> Teléfono</label>
            <input asp-for="Telefono" class="form-control" required data-val-required="El Teléfono es obligatorio." />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GeneroId" class="control-label"><i class="fas fa-venus-mars"></i> Género</label>
            <select asp-for="GeneroId" class="form-control" asp-items="Model.Generos" required></select>
            <span asp-validation-for="GeneroId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RolId" class="control-label"><i class="fas fa-user-tag"></i> Rol</label>
            <select asp-for="RolId" class="form-control" asp-items="Model.Roles" required></select>
            <span asp-validation-for="RolId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Activo" class="control-label"><i class="fas fa-toggle-on"></i> Estado</label>
            <div class="form-check">
                <input asp-for="Activo" class="form-check-input" type="checkbox"  />
                <label class="form-check-label" for="Activo">
                    Activo
                </label>
            </div>
            <span asp-validation-for="Activo" class="text-danger"></span>
        </div>

        <div class="form-group d-flex">
            <button type="submit" class="btn btn-primary mr-2">
                <i class="fas fa-save"></i> Guardar
            </button>
            <button type="button" class="btn btn-secondary" onclick="closeEditModal()">
                <i class="fas fa-times"></i> Cancelar
            </button>
        </div>
    </form>
</div>

<!-- Asegúrate de que estos scripts estén incluidos -->
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
<script
    src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}