@model Hotel.Models.Habitacione

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .form-container {
        padding: 1.5rem;
        border: 1px solid #dee2e6;
        border-radius: .375rem;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 1.5rem;
    }

    .text-center {
        text-align: center;
    }
</style>

<div class="container">
    <h1 class="text-center">Eliminar Habitación</h1>

    <div class="form-container">
        <h3 class="text-center mb-4">¿Estás seguro de que deseas eliminar esta habitacion?</h3>
        <div>
            <h4 class="mb-4">Detalles de la Habitación</h4>
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NumeroHabitacion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NumeroHabitacion)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Capacidad)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Capacidad)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PrecioPorNoche)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PrecioPorNoche)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Imagen)
                </dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Imagen))
                    {
                        <img src="~/img/habitaciones/@Model.Imagen" alt="Imagen de la habitación" class="img-thumbnail" />
                    }
                    else
                    {
                        <span>No hay imagen disponible</span>
                    }
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Activo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Activo)
                </dd>
            </dl>
        </div>

        <form asp-action="Delete" class="text-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la Lista</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
