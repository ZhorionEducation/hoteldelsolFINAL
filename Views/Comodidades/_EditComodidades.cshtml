@model Hotel.Models.Comodidade

@{
    ViewData["Title"] = "Editar Comodidad";
}
<link rel="stylesheet" href="~/css/Comodidades/modalEditReservas.css">

<div class="reserva-edit-container">
    <h1 class="reserva-edit-title"><i class="fas fa-edit"></i> Editar Comodidad</h1>

    <form asp-action="Edit" id="editForm" class="reserva-edit-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        
        <!-- Nombre -->
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"><i class="fas fa-tag"></i> Nombre</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        
        <!-- Descripción -->
        <div class="form-group">
            <label asp-for="Descripcion" class="control-label"><i class="fas fa-info-circle"></i> Descripción</label>
            <textarea asp-for="Descripcion" class="form-control" rows="1" maxlength="50"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        
        <!-- Botones -->
        <div class="form-group d-flex">
            <button type="submit" class="btn btn-primary mr-2">
                <i class="fas fa-save"></i> Guardar
            </button>
            <button type="button" class="btn btn-secondary" onclick="closeEditModal()">
                <i class="fas fa-times"></i> Cerrar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}