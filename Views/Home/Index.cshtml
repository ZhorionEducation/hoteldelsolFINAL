        </div>
    </div>
    <div class="rooms_here">
        @foreach (var habitacion in Model.Habitaciones)
        {
            <div class="single_rooms">
                <div class="room_thumb position-relative">

                    <div class="room-image-container" style="cursor: pointer;">
                        <img src="~/img/habitaciones/@habitacion.Imagen" alt="@habitacion.TipoHabitacion"
                            class="img-fluid gray-filter">
                    </div>
                    <div class="room_heading d-flex justify-content-between align-items-center">

                        <div class="room_heading_inner">

                            <span>Desde $@habitacion.PrecioPorNoche.ToString("N0")/noche</span>
                            <h3>@habitacion.TipoHabitacion - @habitacion.NumeroHabitacion</h3>
                            <span>@habitacion.Descripcion</span>
                            <h3>Incluye las siguientes comodidades</h3>
                            <span class="textocomodidad">
                                @foreach (var comodidad in habitacion.Comodidades)
                                {
                                    <li>@comodidad.Nombre</li>
                                }
                            </span>
                        </div>
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <a href="@Url.Action("Create", "Reservas", new { id = habitacion.Id })">Haz una reserva</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Create", "Usuarios")">Haz una reserva</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
