    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Seleccionar todas las imágenes que queremos hacer clickeables
            const images = document.querySelectorAll('.room-image-container img');
            const modalEl = document.getElementById('imageModal');
            const modalImage = document.getElementById('modalImage');

            // Crear la instancia del modal
            const modal = new bootstrap.Modal(modalEl, {
                backdrop: true,
                keyboard: true
            });

            // Manejar el click en las imágenes
            images.forEach(img => {
                img.addEventListener('click', function () {
                    modalImage.src = this.src;
                    modal.show();
                });
            });

            // Manejar el click en el backdrop
            modalEl.addEventListener('click', function (e) {
                // Si el click fue directamente en el modal (no en sus hijos)
                if (e.target === modalEl) {
                    modal.hide();
                }
            });

            // Manejar el click en el botón de cerrar
            const closeButton = modalEl.querySelector('.btn-close');
            closeButton.addEventListener('click', function () {
                modal.hide();
            });

            // Manejar la tecla Escape
            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape' && modalEl.classList.contains('show')) {
                    modal.hide();
                }
            });
        });
    </script>

